{
  "version": "0.1.0",
  "command": "tsc",
  "isShellCommand": true,
  "args": ["-p", "."],
  "showOutput": "silent",
  "problemMatcher": "$tsc",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules/*",
    "lib/*",
    "public/**"
  ]
}