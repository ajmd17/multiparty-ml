{
  "version": "0.1.0",
  "command": "tsc",
  "isShellCommand": true,
  "args": ["-p", "."],
  "showOutput": "silent",
  "problemMatcher": "$tsc",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "jsx": "react"
  },
  "exclude": [
    "node_modules/*",
    "lib/*",
    "webpack.production.config.js",
    "webpack.config.js"
  ]
}